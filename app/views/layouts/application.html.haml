!!!
%html
  %head
    %title
      - if content_for? :title
        = strip_tags yield :title
        |
      PushSomething

    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    = render 'shared/top_bar'
    - if content_for? :title
      #title-row
        .row
          .twelve.columns
            = yield :title
    = yield
