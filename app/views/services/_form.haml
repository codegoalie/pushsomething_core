= form_for @service do |f|
  .row
    .large-8.columns
      -if @service.errors.any?
        .row
          .large-12.columns
            %h3= t('service.invalid')
            = t('correct_these_fields')
            %ul.disc
              - @service.errors.full_messages.each do |msg|
                %li= msg
      .row
        .large-4.columns
          = f.label :name
          = f.text_field :name

    .large-4.columns
      = f.submit t('save'), class: 'button'
      = link_to t('cancel'), services_path
